{
  "name": "letsrunit-packages",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "compat/*",
    "packages/*",
    "packages/@types/*"
  ],
  "scripts": {
    "cli": "yarn workspace @letsrunit/cli dev",
    "build": "yarn build:packages",
    "build:packages": "yarn workspaces foreach -ptA --include 'packages/*' --exclude 'packages/@types/*' run build",
    "clean": "yarn workspaces foreach -ptA --include 'packages/*' exec rm -rf dist",
    "test": "yarn workspaces foreach -ptA run test",
    "test:apps": "yarn workspaces foreach --include 'apps/*' -ptA run test",
    "test:compat": "yarn workspaces foreach --include 'compat/*' -ptA run test",
    "test:packages": "yarn workspaces foreach --include 'packages/*' -ptA run test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "semantic-release": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
