{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    ["@semantic-release/exec", {
      "prepareCmd": "yarn workspaces foreach -A --no-private version ${nextRelease.version}",
      "publishCmd": "yarn build:packages && yarn workspaces foreach -A --no-private exec yarn npm publish --access public --provenance"
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md", "packages/*/package.json"],
      "message": "chore(release): ${nextRelease.version} [skip ci]"
    }],
    "@semantic-release/github"
  ]
}
